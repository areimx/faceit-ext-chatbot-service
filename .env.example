# =============================================================================
# Environment
# =============================================================================
# Set to 'production' for live environment, 'staging' for development/testing
APP_ENV=production
# Path to Node.js executable (default: node)
NODE_EXECUTABLE_PATH=node
# Port for the database API service
DB_API_PORT=3008
# Port for the manager health monitoring service
HEALTH_PORT=3009
# Enable verbose logging (default: false) - not recommended for production
LOG_VERBOSE=false

# =============================================================================
# Database
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=
DB_PASS=
DB_NAME=

# =============================================================================
# FACEIT OAuth
# =============================================================================
CLIENT_ID=
CLIENT_SECRET=

# =============================================================================
# FACEIT Cloudflare Bypass
# =============================================================================
# Secret key for bypassing Cloudflare rules on api.faceit.com endpoints
FACEIT_CF_BYPASS_KEY=

# =============================================================================
# Optional Token Configuration
# =============================================================================
# These have reasonable defaults if not specified

# FACEIT access token lifetime in milliseconds (default: 12 hours)
# ACCESS_TOKEN_TTL_MS=43200000

# Chat token lifetime in milliseconds (default: 4 minutes)
# CHAT_TOKEN_TTL_MS=240000

# Background token refresh interval in milliseconds (default: 30 minutes)
# TOKEN_REFRESH_INTERVAL_MS=1800000

# Minimum time between forced token refreshes in milliseconds (default: 1 minute)
# FORCE_REFRESH_MIN_INTERVAL_MS=60000

# =============================================================================
# Staging Environment Configuration (only used when APP_ENV=staging)
# =============================================================================
# These are only used when APP_ENV is set to 'staging'
# They provide hardcoded credentials for testing purposes

# Staging bot GUID
# STAGE_BOT_GUID=staging_bot_guid

# Staging bot access token
# STAGE_BOT_TOKEN=staging_bot_token

# Staging bot display name
# STAGE_BOT_NICKNAME=StagingBot

# Staging entity GUID for testing
# STAGE_BOT_ENTITY_GUID=staging_entity_guid